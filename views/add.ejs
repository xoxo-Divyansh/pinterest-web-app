<% include ./partials/header.ejs %>
<div class="w-full min-h-screen px-10 py-5 text-white bg-zinc-800">
  <h1 class="text-xl">Create Your New Post</h1>
  <hr class="opacity-10 mt-3 pb-3" />
  <form action="/createpost" method="post" enctype="multipart/form-data">
    <label for="fileInput" class="cursor-pointer bg-gray-100 hover:bg-gray-200 text-black text-sm font-bold py-2 px-2 rounded-lg shadow">
      Upload File
    </label>
    <input class="block hidden" id="fileInput" type="file" placeholder="file" name="postimage" />
    <span id="fileName" class="text-sm mx-2 text-gray-400">choose File..</span>

    <input class="block w-1/3 px-3 py-2 border-1 rounded-md mt-2 bg-zinc-900" type="text" placeholder="Title" name="title" />
    <textarea class="block w-1/3 h-45 px-3 py-2 border-1 rounded-md mt-1 bg-zinc-900 text-white placeholder-white placeholder-opacity-50" type="text" placeholder="Description" name="description">
    </textarea>

    <input class="block w-1/3 py-2 border-1 rounded-md mt-1 bg-red-700 text-sm font-semibold" type="submit" value="Create Post" />
  </form>
</div>

<script>
  const input = document.getElementById("fileInput");
  const fileNameDisplay = document.getElementById("fileName");

  input.addEventListener("change", () => {
    fileNameDisplay.textContent = input.files[0]?.name || "";
  });
</script>

